extends base
block content
  h2 Create Plan
  .ent-container
    h3
      form.createPlan
        .entry
          .entry-text Plan Name
          input(type='text', name='name', placeholder='Plan name')
        .entry
          .entry-text Description
          input(type='text', name='description', placeholder='Plan description')
        .entry
          .entry-text Price
          input(type='number', name='price', placeholder='Plan price')
        .entry
          .entry-text Discount
          input(type='number', name='discount', placeholder='Discount')
        .btn-parent
          button.btn.btn-primary(type='submit') Create Plan