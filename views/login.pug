extend base 
block content
  h2 LOGIN
  .container__parent
    .vidDiv
      video.bg-video__content2(autoplay='', muted='', loop='')
        source(src='Chef.mp4', type='video/mp4')
        |         Your browser does not support this video.
    form.login
      .entry
        .entry-text
          | Email
        input(type='email', name='Name', placeholder='Your Email', required='')
      .entry
        .entry-text
          | Password
        input(type='password', name='Password', placeholder='**********')
      .btn-parent
        a.btn.btn-full.form-button.login-button(href='javascript:;') Login
        a.btn.btn-full.form-button(href="/signup") Signup
      .btn-parent
      a.btn.btn-full.form-button(href="/forgetPassword") Forgot Password
