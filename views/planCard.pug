.signup-child
        .signup-header
          h3 #{plan.name}
          .signup-pricing
            strike ₹#{plan.price}
            span.pricing ₹#{plan.netprice}
            | /month
            p That’s only ₹#{(plan.netprice/30).toFixed(2)}  per meal
        .signup-features
          ul
            li
              i.fas.fa-check.small-icon  
              | #{plan.description}
            li
              i.fas.fa-check.small-icon  
              | #{plan.ratingsAverage}/10 ratings
            li
              i.fas.fa-check.small-icon  
              | Assured quality and best taste.
            li
              i.fas.fa-check.small-icon  
              | Free delivery
          .signup-button
            if(user==null)
              a.btn.btn-full(href='/login') I'm hungry
            else
              a.btn.btn-full(href=`/plans/${plan.id}`, plan-id=`${plan["_id"]}`) I'm hungry
