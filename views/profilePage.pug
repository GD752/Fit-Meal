block content
  h2 User Page
  .profile-container
    p
      .imgdiv 
        img(src=`${user.profileImage}`,class="profileimg")  
    p #{user.name}
    p Email: #{user.email}
    a(href="/updateInfo") Update info
    if user.role=="admin"
      a(href="/manageUsers") Manage Users
      a(href="/managePlans") Manage Plans
