extends base
block content
  h2 Update Plan
  .profile-container
    h3
      form.updatePlanInfo
        .entry
          .entry-text Plan Name
          input(type='text', name='name', value=`${plan.name}`, uid=`${plan.id}`)
        .entry
          .entry-text Description
          input(type='text', name='description', value=`${plan.description}`)
        .entry
          .entry-text Price
          input(type='number', name='price', value=`${plan.price}`)
        .entry
          .entry-text Discount
          input(type='number', name='discount', value=`${plan.discount}`)
        .btn-parent
          button.btn.btn-primary(type='submit') Update Plan