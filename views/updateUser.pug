extends base
block content
  h2 User Page
  .profile-container
    h3
      p 
        .imgdiv
          img(src=`${user1.profileImage}`,class="profileimg")  
        input(type="file", name="").updateProfile
      form.updateUserInfo
        .entry
          .entry-text Name
          input(type='text', name='name1', value=`${user1.name}`, uid=`${user1.id}`)
        .entry
          .entry-text Email
          input(type='email', name='email1', value=`${user1.email}`)
        .entry
          .entry-text Role
          input(type='text', name='role1', value=`${user1.role}`)
        .btn-parent
          button.btn.btn-primary(type='submit') Update User